<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.mttnow.android.app_tmdb.ui.Movie.MovieFragment"
        android:label="@string/title_Popular"
        tools:layout="@layout/fragment_movie">
        <argument
            android:name="top"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>


    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.mttnow.android.app_tmdb.ui.Movie.MovieFragment"
        android:label="@string/title_Top"
        tools:layout="@layout/fragment_notifications" >
        <argument
        android:name="top"
        app:argType="boolean"
        android:defaultValue="false" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.mttnow.android.app_tmdb.ui.notifications.NotificationsFragment"
        android:label="@string/title_Search"
        tools:layout="@layout/fragment_notifications" />
</navigation>